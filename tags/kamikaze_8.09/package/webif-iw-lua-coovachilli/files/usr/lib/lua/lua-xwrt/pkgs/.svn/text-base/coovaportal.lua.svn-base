  form = formClass.new(tr("File Content"),true)
  form:Add("text_line","filecontent",[[<TEXTAREA name="filecontent1" rows="15" wrap="off" style="width:100%">]]..filecontent..[[</TEXTAREA>]])
  forms[2] = form
	return forms
