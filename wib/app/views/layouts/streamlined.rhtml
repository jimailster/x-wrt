<html>
<head>
  <title><%= controller.action_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'streamlined' %>
  <%= javascript_include_tag '/windows_js/javascripts/window' %>
  <%= stylesheet_link_tag '/windows_js/themes/theme1' %>
  <%= stylesheet_link_tag '/windows_js/themes/mac_os_x' %>
  <%= stylesheet_link_tag '/windows_js/themes/default' %>
  <%= stylesheet_link_tag 'grids/grids' %>
  <%= stylesheet_link_tag 'streamlined' %>
  <%= stylesheet_link_tag 'menu' %>
</head>
<body id="yahoo-com">
	<div id="doc" class="yui-t1">
		<div id="hd">
			<%= render(:partial => 'streamlined/header' )%>
		</div>
		<div id="bd">
			<div id="yui-main">
				<div class="yui-b">
					<p id="notice"><%= flash[:notice] %></p>
					<%= image_tag 'loading.gif', :id=>'spinner', :style=>"display:none; float:right;" %>
					<%= @content_for_layout %>
				</div>
			</div>
			<div class="yui-b">
				<%= render(:partial => "streamlined/manage")%>
			</div>
		</div>
		<div id="ft">
			<%= render(:partial => 'streamlined/footer')%>
	    </div>
	</div>

</body>
</html>
